<div id="comments">
<% for comment in @comments %>
  <div class="comment">
    <%=simple_format comment.text %>
    <HR>
  </div>
<% end %>
</div>


<h2>New Comment</h2>

<% form_for [@commentable, Comment.new] do |f| %>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>