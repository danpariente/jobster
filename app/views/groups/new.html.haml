=render '/home/top'

.span-24
  .span-3
    %img.span-3{:src => "#{@user.photo_url.nil? ? "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(@user.email)}" : @user.photo_url }"}
    =render '/home/links'
  .span-20
    %h3 Create a new group
    Create a new group here, use it to share information!

    = form_for @group do |f|
      = f.label :name
      = f.text_field :name, :size => 45
      %br
      = f.label :description
      = f.text_area :description, :cols => 113, :rows => 7
      %br
      = f.submit "create"
