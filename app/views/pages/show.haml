=render '/home/top'
.span-24
  .span-3
    %img.span-3{:src => "#{@user.photo_url.nil? ? "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(@user.email)}" : @user.photo_url }"}
    =render '/home/links'    
  .span-15
    %h3 
      = @page.title
    =raw @page.body
    
    %hr.space
    
    =#render '/shared/comment_and_like', {:locals => {:item => @page}}

    
  .span-6.last
    %h3 Other pages
    =render '/shared/pages', :locals => {:owner => @user, :owner_name => 'user'}