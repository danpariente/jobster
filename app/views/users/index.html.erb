<% title "User Management Dashboard" %>

<%# if can? :manage, @users %>
  <p>Hello, you are an Admin</p>
  <h2>Users</h2>
  
  <% for user in @users %>
  <p>
    <h2>
        <%= image_tag user.photo_url.nil? ? "http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(user.email)}" : user.photo_url %>
	    <%= user.username %> : <%= user.email %> 
	    <%= link_to "Edit User", edit_user_path(user) %> |
	    <%= link_to "Delete User", user, :confirm => "Are you sure?", :method => :delete %> |
	    <%= button_to ("Add Contact", friendships_path(:friend_id => user), :form_class => "nonstylebutton", :remote => true, :disable_with  => 'adding...') %>
	    <%#= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>	    
    </h2>
  </p>
  <HR>
  <br \>
  <% end %>

  <%= link_to 'New User', new_user_path %>

<%# else %>
  <p>Hello, you are not an Admin</p>
<%# end %>